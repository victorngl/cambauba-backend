// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// [START] Users of Backend and their Api Keys
model User {
  id    Int     @unique @default(autoincrement()) @id
  email String 
  name  String?
  password String
  apiKeys ApiKeys[]

}

model ApiKeys {
  id        Int     @default(autoincrement()) @id
  token     String
  owner    User    @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade) 
  ownerId   Int
  expire    String?    
  name      String 
}

// [END] Users of Backend and their Api Keys

//[START] Alunos e Responsaveis e Relação entre os dois

model Student {
  id          Int     @default(autoincrement()) @id
  external_id String?
  name        String
  parents     ParentsStudent[]
}

model Parent {
  id          Int     @default(autoincrement()) @id
  external_id String?
  name        String
  studens     ParentsStudent[]
}

model ParentsStudent {
  student    Student     @relation(fields: [studentId], references: [id])
  studentId  Int // relation scalar field (used in the `@relation` attribute above)
  parent     Parent @relation(fields: [parentId], references: [id])
  parentId   Int // relation scalar field (used in the `@relation` attribute above)
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([studentId, parentId])
}


//[END] Alunos e Responsaveis e Relação entre os dois